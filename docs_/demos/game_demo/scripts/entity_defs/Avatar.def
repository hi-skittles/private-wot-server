<root>
	<Volatile>	
		<position/>
		<yaw/>
	</Volatile>
	
	<Properties>
		<timerId>
			<Type> CONTROLLER_ID </Type>
			<Flags> CELL_PRIVATE </Flags>
			<Default> 0 </Default>
			<Persistent> false </Persistent>
		</timerId>

		<moveId>
			<Type> CONTROLLER_ID </Type>
			<Flags> CELL_PRIVATE </Flags>
			<Default> 0 </Default>
			<Persistent> false </Persistent>
		</moveId>

		<movementCentre>
			<Type> VECTOR3 </Type>
			<Flags> CELL_PRIVATE </Flags>
			<Persistent> false </Persistent>
		</movementCentre>

		<moveRadius>
			<Type> FLOAT </Type>
			<Flags> CELL_PRIVATE </Flags>
			<Persistent> false </Persistent>
		</moveRadius>

		<moveVelocity>
			<Type> FLOAT </Type>
			<Flags> CELL_PRIVATE </Flags>
			<Persistent> false </Persistent>
		</moveVelocity>
	</Properties>

	<ClientMethods>	
		<!-- signal avatar to move -->
		<move>
			<Arg> VECTOR3 </Arg>
			<Arg> FLOAT </Arg>
		</move>
		
		<!-- signal avatar to stop -->
		<stop/>
		
		<!-- kill avatar -->
		<kill/>
		
		<platformEnabled/>
	</ClientMethods>

	<CellMethods>
		<spawn>
			<Exposed/>
			<Arg> STRING </Arg>
			<Arg> VECTOR3 </Arg>
		</spawn>
		
		<spawnAll>
			<Exposed/>
			<Arg> STRING </Arg>
			<Arg> INT32 </Arg> <!-- number of avatars to spawn -->
			<Arg> FLOAT </Arg> <!-- radius around player to spawn -->
		</spawnAll>
		
		<move>
			<Exposed/>
			<Arg> VECTOR3 </Arg> <!-- destination point -->
			<Arg> FLOAT </Arg> <!-- velocity -->
		</move>
		
		<moveAll>
			<Exposed/>
			<Arg> FLOAT </Arg> <!--- radius of movement -->
			<Arg> FLOAT </Arg> <!-- velocity -->
		</moveAll>
		
		<stop>
			<Exposed/>
		</stop>
		
		<setMovement>
			<Arg> ENTITY_ID </Arg> <!-- Initiating entity -->
			<Arg> FLOAT </Arg> <!-- radius of movement -->
			<Arg> FLOAT </Arg> <!-- velocity  -->
		</setMovement>>

		<stopAll>
			<Exposed/>
		</stopAll>
		
		<kill>
			<Exposed/>
		</kill>
		
		<killAll>
			<Exposed/>
		</killAll>
	</CellMethods>

	<BaseMethods>
	</BaseMethods>
</root>
